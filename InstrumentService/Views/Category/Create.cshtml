@model InstrumentService.Models.Category;

<form method="post" asp-action="Create">
    <div class="border p-3">
        <div class="mb-3 row">
            <h2 class="text-info pl-3">Добавить категорию</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="mb-3 row">
                    <label asp-for="Name" class="col-4 col-form-label">Название</label>
                    <div class="col-8">
                        <input asp-for="Name" class="form-control" id="Name">
                    </div>
                </div>

                <div class="mb-3 row">
                    <label asp-for="DisplayOrder" class="col-4 col-form-label">Порядок отображения</label>
                    <div class="col-8">
                        <input asp-for="DisplayOrder" class="form-control" id="DisplayOrder">
                    </div>
                </div>
                <div class="mb-3 row">
                    <div class="col-8 offset-4 row">
                        <div class="col">
                            <input type="submit" class="btn btn-info w-100" value="Создать"/>
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-100">Назад</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                @* Keep this empty *@
            </div>
        </div>
    </div>
</form>
