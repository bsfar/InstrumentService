@model InstrumentService.Models.Product;

@{
    var title = "Создание товара";
}
<form method="post" enctype="multipart/form-data">
    @if (Model.Id != 0)
    {
        title = "Изменение товара";
        <input asp-for="Id" type="hidden" />
    }


    <div class="border p-3">
        @*<div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
        <div class="mb-3 row">
            <h2 class="text-primary pl-3">@title</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="mb-3 row">
                    <div class="col-4">
                    <label asp-for="Name" class="col-form-label">Название</label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Name" class="form-control">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-3 row">
                    <div class="col-4">
                    <label asp-for="Price" class="col-form-label">Цена</label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Price" class="form-control">
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-3 row">
                    <div class="col-4">
                    <label asp-for="Description" class="col-form-label">Порядок отображения</label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Description" class="form-control">
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-3 row">
                    <div class="col-4">
                    Image
                    </div>
                    <div class="col-8">
                        <input type="file" name="file" id="uploadbox" multiple class="form-control" />

                    </div>
                </div>

@*                <div class="mb-3 row">
                    <label asp-for="Description" class="col-4 col-form-label">Порядок отображения</label>
                    <div class="col-8">
                        <input asp-for="Description" class="form-control">
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>*@

                <div class="mb-3 row">
                    <div class="col-8 offset-4 row">
                        <div class="col">
                            @if(Model.Id != 0)
                            {
                                //update
                                <input type="submit" class="btn btn-secondary w-100" value="Изменить" />
                            }
                            else
                            {
                                //create
                                <input type="submit" onclick ="return validateInput()" class="btn btn-success w-100" value="Создать" />
                            }
                            
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-secondary w-100"><i class="fa-solid fa-right-from-bracket"></i>Назад</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                @* Keep this empty *@
            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}