@model IEnumerable<InstrumentService.Models.Product>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Список товаров</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Product" asp-action="Upsert" class="btn btn-primary">
                <i class="fa-solid fa-circle-plus"></i>&nbsp; Создать новый товар
            </a>
        </div>
    </div>

    <br /><br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width: 100%">
            <thead>
                <tr>
                    <th scope="col">
                        Название товаром
                    </th>
                    <th scope="col">
                        Цена
                    </th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="30%">@obj.Name</td>
                        <td width="30%">@obj.Price</td>
                        <td class="text-center">
                            @* <div class="w-75 btn-group" role="group">
                    <a asp-controller="Category" asp-route-Id="@obj.Id" asp-action="Edit" class="btn btn-primary mx-2">
                    Редактировать
                    </a>
                    <a asp-controller="Category" asp-route-Id="@obj.Id"  asp-action="Delete" class="btn btn-danger mx-2">
                    Удалить
                    </a>
                    </div>*@
                            <div class="d-grid gap-2 d-md-block">
                                <a asp-controller="Product" asp-route-Id="@obj.Id" asp-action="Upsert" class="btn btn-success text-white text-decoration-none" role="button">
                                    <i class="fa-solid fa-file-pen"></i>
                                </a>
                                <a asp-controller="Product" asp-route-Id="@obj.Id" asp-action="Delete" class="btn btn-danger text-white text-decoration-none" role="button">
                                    <i class="fa-solid fa-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>Товаров не существует</p>
    }
</div>
